# ChainLance ASI Alliance Agent Configuration

# Agent Configuration
VERIFICATION_AGENT_SEED=chainlance_verification_agent_seed
AGENT_PORT=8001
AGENT_PRIVATE_KEY=your_agent_private_key_here

# Blockchain Configuration
WEB3_PROVIDER=https://sepolia.infura.io/v3/your-infura-key
CHAINLANCE_CORE_CONTRACT=0x6fe56a84a657bbaffc3953ff786083b7411e5876
ASI_VERIFIER_CONTRACT=0xe9d2f31ba4abcdd29cd8586588ba55562a4d24b8
ASI_ORACLE_CONTRACT=0xd7221675d292a4e44f88127651978edc98aaa1dc
PYUSD_TOKEN_CONTRACT=0xb8bb2bda510ac245e44d2dc583326362722bcebf

# ASI Alliance Configuration
AGENTVERSE_API_KEY=your_agentverse_api_key_here
ASI_ONE_ENDPOINT=https://asi-one.ai/api/v1
METTA_CONFIG_PATH=./config/metta_config.json

# Multi-Agent Coordination
COORDINATOR_PORT=8000
COORDINATOR_SEED=chainlance_coordinator_seed
MAX_AGENTS_PER_VERIFICATION=3
AGENT_DISCOVERY_TIMEOUT=30000

# MeTTa Knowledge Graph Configuration
METTA_REASONING_ENABLED=true
KNOWLEDGE_GRAPH_PATH=./data/knowledge_graph.json
REASONING_CONFIDENCE_THRESHOLD=0.75

# ASI:One Chat Protocol
CHAT_PROTOCOL_ENABLED=true
CONVERSATION_TIMEOUT=3600000
MESSAGE_RETENTION_DAYS=30

# IPFS Configuration
IPFS_GATEWAY=https://gateway.pinata.cloud/ipfs/
IPFS_API_KEY=your_pinata_api_key
IPFS_SECRET=your_pinata_secret

# Verification Thresholds
APPROVAL_THRESHOLD=0.75
CONFIDENCE_THRESHOLD=0.6
AGENT_CONSENSUS_REQUIRED=2

# Payment Configuration
AGENT_APPROVAL_PERCENTAGE=20
CLIENT_APPROVAL_PERCENTAGE=80
AUTO_RELEASE_TIMEOUT_DAYS=14

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/agent.log

# Development
DEBUG=true
MOCK_VERIFICATION=false
SIMULATE_AGENT_NETWORK=true

# Performance Settings
MAX_CONCURRENT_VERIFICATIONS=5
VERIFICATION_TIMEOUT=300
HEARTBEAT_INTERVAL=30
